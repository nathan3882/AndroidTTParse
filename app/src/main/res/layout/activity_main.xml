<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:activity="me.nathan3882.activities.MainActivity" android:id="@+id/coordinatorLayout" tools:layout_editor_absoluteY="25dp">

    <include layout="@layout/content_main" android:id="@+id/include"
             android:layout_height="0dp"
             android:layout_width="0dp"
             app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
    />

    <EditText
            android:layout_width="249dp"
            android:layout_height="44dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/enterEmail"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:gravity="center"
            app:layout_constraintHorizontal_bias="0.504"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/emailHelper"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:ems="10"
            android:maxLength="6"
            android:id="@+id/numericPassword" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.503"
            android:gravity="center"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/sixDigitPwHelper"/>/>
    <TextView
            android:text="@string/emailHelper"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:id="@+id/emailHelper" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:gravity="center"
            app:layout_constraintHorizontal_bias="0.502"
            android:fontFamily="@font/montserrat" android:textColor="#008B8B" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/welcomeStudent"/>
    <TextView
            android:text="@string/sixDigitPwHelper"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:gravity="center"
            android:id="@+id/sixDigitPwHelper" android:fontFamily="@font/montserrat" android:textColor="#008B8B"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/enterEmail"/>
    <Switch
            android:text="Configure more lessons?"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:visibility="visible"
            android:id="@+id/addLessonInfoButton"
            tools:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="12dp" app:layout_constraintBottom_toTopOf="@+id/loginButton"/>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="318dp"
            android:layout_height="15dp"
            android:id="@+id/mainActivityProgressBar"
            android:max="100" android:progress="0" android:visibility="invisible"
            android:progressTint="@android:color/holo_orange_dark" tools:visibility="invisible"
            android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <ImageView
            android:layout_width="305dp"
            android:layout_height="55dp" app:srcCompat="@drawable/login"
            android:id="@+id/loginButton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="44dp" app:layout_constraintBottom_toTopOf="@+id/include"
            app:layout_constraintHorizontal_bias="0.507"/>
    <TextView
            android:text="Welcome, student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/welcomeStudent"
            android:fontFamily="@font/montserrat" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/mainActivityProgressBar" android:textColor="#008b8b"
            android:textSize="20sp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
    <![CDATA[


    />

    />





]]>
</android.support.constraint.ConstraintLayout>