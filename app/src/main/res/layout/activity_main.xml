<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:activity="me.nathan3882.activities.MainActivity" android:id="@+id/coordinatorLayout" tools:layout_editor_absoluteY="25dp">

    <include layout="@layout/content_main" android:id="@+id/include"
             android:layout_height="0dp"
             android:layout_width="0dp"
             app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
    />

    <TextView
            android:layout_width="257dp"
            android:layout_height="57dp"
            android:id="@+id/helloText"
            android:text="welcomeText" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="68dp"
            app:layout_constraintHorizontal_bias="0.502" android:textAllCaps="false"
            android:gravity="center"/>
    <TextView
            android:text="loginOrRegisterText"
            android:layout_width="159dp"
            android:layout_height="47dp"
            android:id="@+id/loginOrRegisterText" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/helloText" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:gravity="center"/>
    <EditText
            android:layout_width="249dp"
            android:layout_height="44dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/enterEmail"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:gravity="center" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/loginOrRegisterText"
            app:layout_constraintHorizontal_bias="0.503" android:hint="@string/empty_email"
    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:ems="10"
            android:maxLength="6"
            android:id="@+id/numericPassword" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.503" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/sixDigitPwHelper"
            android:gravity="center"/>/>
    <TextView
            android:text="@string/sixDigitPwHelper"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:id="@+id/sixDigitPwHelper" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/enterEmail"
            android:gravity="center"/>
    <Button
            android:text="@string/loginText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loginButton" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/numericPassword" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/include" app:layout_constraintVertical_bias="0.657"
            android:visibility="visible" style="@style/Widget.AppCompat.Button.Borderless.Colored"/>
    <Switch
            android:text="Configure more lessons?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:id="@+id/addLessonInfoButton" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/loginButton" tools:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/><![CDATA[
    />

    />



]]>
</android.support.constraint.ConstraintLayout>