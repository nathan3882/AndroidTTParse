<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:activity="me.nathan3882.androidttrainparse.fragments.DayFragmentFactory$DayFragment"
                                             android:id="@+id/frameLayout">

    <!-- TODO: Update blank fragment layout -->

    <TextView
            android:text=""
            android:layout_width="334dp"
            android:gravity="center|center_vertical"
            android:layout_height="81dp" android:id="@+id/dayFragHeader"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/montserrat" android:textSize="24sp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/timeDisplayFragmentProgressBar"/>
    <TextView
            android:text="Loading... please wait :)"
            android:layout_width="347dp"
            android:layout_height="326dp"
            android:gravity="center|top"
            android:id="@+id/lessonDisplay"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:fontFamily="@font/montserrat" android:textSize="18sp"
            app:layout_constraintHorizontal_bias="0.523" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/dayFragHeader" android:layout_marginBottom="8dp">
    </TextView>
    <ImageView
            android:layout_width="289dp"
            android:layout_height="49dp" app:srcCompat="@drawable/configure_lessons"
            android:id="@+id/configureLessonsButton"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="40dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="4dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.53" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/lessonDisplay" app:layout_constraintVertical_bias="1.0"/>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="348dp"
            android:layout_height="17dp"
            android:id="@+id/timeDisplayFragmentProgressBar" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>
</android.support.constraint.ConstraintLayout>
